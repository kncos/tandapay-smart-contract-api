{
  "name": "tandapay-smart-contract-api",
  "version": "pre-alpha",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "lint": "eslint src/ test/",
    "test": "jest --detectOpenHandles",
    "lint-fix": "eslint src/ test/ --fix",
    "format": "prettier . --write"
  },
  "keywords": [
    "typescript",
    "tandapay",
    "smart contract",
    "wrapper",
    "abstraction"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "author": "kncos",
  "license": "ISC",
  "type": "module",
  "description": "Wrapper / Abstraction Layer built on top of the TandaPay smart contract. the TandaPay smart contract implements a p2p crowdfunding protocol, this library exposes an API for interacting with it.",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.5",
    "eslint": "^9.18.0",
    "jest": "^29.7.0",
    "prettier": "^3.5.1",
    "ts-jest": "^29.2.5",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.20.0"
  },
  "dependencies": {
    "pnpm": "^10.3.0",
    "viem": "^2.22.4"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "esbuild"
    ],
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
